                <label for="postContent">What's happening?</label>
              </div>
              <div class="d-flex justify-content-end mt-3">
                <button type="submit" class="btn btn-primary">Post</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
   <% for post in @posts%>
   <% user = User.find_by({ "id%>
